@{
    ViewData["Title"] = "Home Page";
}

@model HomeViewModel

<div class="row pb-3">

    @foreach (var product in Model.Products)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card">
                        <img src="~/@product.Product.ImageUrl.Replace(@"\","/")"
                         class="card-img-top rounded" style="height:300px" />
                        <div class="pl-1">
                            <p class="card-title h5 text-primary">@product.Product.Title</p>
                            <p class="card-title text-secondary">@product.Product.Author</p>
                        </div>
                        <div class="pl-1">
                            <p>List Price: <strike><br /><b>@product.Product.ListPrice.ToString("0.00")</b></strike></p>
                            <p>As low as: @product.Product.Price100.ToString("0.00")</p>
                        </div>
                    </div>
                    <div class="p-2">
                        <a asp-controller="Home" asp-action="Details"
                       asp-route-id="@product.Product.Id">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
