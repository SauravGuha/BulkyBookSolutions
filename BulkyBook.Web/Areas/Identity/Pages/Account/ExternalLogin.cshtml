@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h2 id="external-login-title">Associate your @Model.ProviderDisplayName account.</h2>
<hr />

<p id="external-login-description" class="text-info">
    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>

<div class="row">
    <div class="col-md-12">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row p-1">
                <div class="col-4 form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row p-1">
                <div class="col-6  form-floating">
                    <input asp-for="Input.Name" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Name"></label>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="col-6  form-floating">
                    <input asp-for="Input.Age" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Age"></label>
                    <span asp-validation-for="Input.Age" class="text-danger"></span>
                </div>
            </div>

            <div class="row p-1">
                <div class="col-6 form-floating">
                    <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.PhoneNumber"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-6 form-floating">
                    <input asp-for="Input.AddressLine1" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.AddressLine1"></label>
                    <span asp-validation-for="Input.AddressLine1" class="text-danger"></span>
                </div>
            </div>

            <div class="row p-1">
                <div class="col-6 form-floating">
                    <input asp-for="Input.AddressLine2" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.AddressLine2"></label>
                    <span asp-validation-for="Input.AddressLine2" class="text-danger"></span>
                </div>
                <div class="col-6 form-floating">
                    <input asp-for="Input.LandMark" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.LandMark"></label>
                    <span asp-validation-for="Input.LandMark" class="text-danger"></span>
                </div>
            </div>


            <div class="row p-1">
                <div class="col-6 form-floating">
                    <input asp-for="Input.City" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.City"></label>
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="col-6 form-floating">
                    <input asp-for="Input.PostCode" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.PostCode"></label>
                    <span asp-validation-for="Input.PostCode" class="text-danger"></span>
                </div>
            </div>

            <div class="row p-1">
                <div class="col-6 form-floating">
                    <input asp-for="Input.State" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.State"></label>
                    <span asp-validation-for="Input.State" class="text-danger"></span>
                </div>
                <div class="col-6 form-floating">
                    <input asp-for="Input.AddressPhoneNumber" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.AddressPhoneNumber"></label>
                    <span asp-validation-for="Input.AddressPhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row p-1">
                <div class="col-6 form-floating">
                    <input asp-for="Input.Country" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Country"></label>
                    <span asp-validation-for="Input.Country" class="text-danger"></span>
                </div>
                <div class="col-6 form-floating">
                    <select asp-for="Input.CompanyId" asp-items="@Model.Input.Companies" class="form-select">
                        <option disabled selected>--Choose Company</option>
                    </select>
                </div>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
