@model IEnumerable<Feature>

<div class="container p-3">
    <div class="row">
        <div class="col-6 me-auto">
            <a class="btn btn-primary" asp-controller="Feature" asp-action="CreateEdit">Create Feature</a>
        </div>
    </div>

    <div class="row">
        <table class="table tabel-bordered table-striped text-center" width="100%">

            <thead>
                <tr class="text-nowrap">
                    <th>Controller Name</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.ControllerName</td>
                        <td>
                            <a class="btn secondary" asp-controller="Feature" asp-action="Delete" asp-route-id="@category.Id">
                                Delete
                                <i class="bi bi-trash2-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>

@section Scripts{
}