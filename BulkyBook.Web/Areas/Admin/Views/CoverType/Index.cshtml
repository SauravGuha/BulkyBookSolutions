@model IEnumerable<CoverType>

<div class="container p-3">
    <div class="row">
        <div class="col-6 me-auto">
            <a class="btn btn-primary" asp-controller="CoverType" asp-action="CreateEdit">Create Cover Type</a>
        </div>
    </div>

    <div class="row">
        <table class="table tabel-bordered table-striped text-center" width="100%">

            <thead>
                <tr class="text-nowrap">
                    <th>Cover Type Name</th>
                    <th>Cover Type Description</th>
                    <th>Created Date</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>@category.CreatedDate</td>
                        <td>
                            <a class="btn secondary" asp-controller="CoverType" asp-action="CreateEdit" asp-route-id="@category.Id">
                                Edit
                                <i class="bi bi-pen-fill"></i>
                            </a>
                            <a class="btn secondary" asp-controller="CoverType" asp-action="Delete" asp-route-id="@category.Id">
                                Delete
                                <i class="bi bi-trash2-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>

@section Scripts{
}